</style>


<script>

    $(document).ready(function () {

    $("#SHOWEXP").click(function (e, params) {

       
                $('#loadingmessage').show();
                var fromdate = $("#FromDate").val();
                var todate = $("#Todate").val();
           
                $.ajax({
                    url: "@Url.Action("GETEXPWISE", "EXPADN")",
                    traditional: true,
                    type: "GET",
                    data: { 'fromdate': fromdate, 'todate': todate },
                    success: function (fooBarHTML) {
                        $('#loadingmessage').hide();
                    $("#output").html(fooBarHTML);
                    },
                    error: function (xhr, status, errorThrown) {
                        $('#loadingmessage').hide();
                    }
                    });
        });
        $("#SHOWSPOEXP").click(function (e, params) {

       
                $('#loadingmessage').show();
            var fromdate = $("#SpoFromDate").val();
