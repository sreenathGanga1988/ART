            </td>
            <td class="col-md-4">
                @Html.DisplayFor(modelItem => Model.Reason)
            </td>






        </tr>





        <tr class="row">
            <td class="col-md-2">@Html.LabelFor(model => model.Merchandiser, htmlAttributes: new { @class = "control-label col-md-2" })</td>
            <td class="col-md-4">@Html.DisplayFor(modelItem => Model.Merchandiser)</td>
