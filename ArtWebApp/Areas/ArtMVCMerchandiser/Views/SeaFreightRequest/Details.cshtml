@model ArtWebApp.DataModels.FreightRequestMaster

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/ArtMVC/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div class="form-horizontal">


    <table class="table-bordered table-striped ">

